# =============================================================================
# TYPO3 Production Environment — Configuration
#
# Copy this file to .env and adjust the values for your deployment.
# =============================================================================

# -----------------------------------------------------------------------------
# Domain & SSL
# -----------------------------------------------------------------------------

# Your production domain (required)
DOMAIN=typo3.example.com

# Email for Let's Encrypt certificate registration (required)
ACME_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Image Versions
# -----------------------------------------------------------------------------

PHP_VERSION=8.3

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------

TYPO3_DB_HOST=db
TYPO3_DB_PORT=3306
TYPO3_DB_NAME=typo3
TYPO3_DB_USERNAME=typo3
TYPO3_DB_PASSWORD=CHANGE_ME_db_password
MARIADB_ROOT_PASSWORD=CHANGE_ME_root_password

# -----------------------------------------------------------------------------
# TYPO3
# -----------------------------------------------------------------------------

TYPO3_CONTEXT=Production
TYPO3_ENCRYPTION_KEY=CHANGE_ME_generate_with_typo3_install_tool
TYPO3_TRUSTED_HOSTS_PATTERN=.*

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------

REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Mail (optional — configure for SMTP delivery)
# -----------------------------------------------------------------------------

# TYPO3_MAIL_TRANSPORT=smtp
# TYPO3_MAIL_SMTP_SERVER=smtp.example.com:587
# TYPO3_MAIL_SMTP_USERNAME=
# TYPO3_MAIL_SMTP_PASSWORD=
# TYPO3_MAIL_FROM_ADDRESS=noreply@example.com
# TYPO3_MAIL_FROM_NAME=TYPO3

# -----------------------------------------------------------------------------
# PHP Tuning (optional — defaults are sensible for most sites)
# -----------------------------------------------------------------------------

# PHP_MEMORY_LIMIT=512M
# PHP_MAX_EXECUTION_TIME=240
# PHP_UPLOAD_MAX_FILESIZE=32M
# PHP_POST_MAX_SIZE=32M
# PHP_MAX_INPUT_VARS=1500
